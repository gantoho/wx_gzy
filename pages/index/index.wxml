<view class="index">
  <view class="head" style="--barTop: {{ capsuleTop }}px; --barHeight: {{ capsuleHeight }}px; background-color: {{ scrollTop > 200 ? 'rgba(255, 255, 255, .6)' : 'transparent' }}; backdrop-filter: {{ scrollTop > 200 ? 'blur(20rpx) saturate(180%)' : 'blur(0rpx) saturate(100%)' }};">
    <view class="container">
      <view class="logo">
        <image src="../../assets/images/在云水果商城.png" mode="aspectFit"/>
      </view>
      <view class="search">
        <view class="input">
          <navigator url="/pages/search/search" open-type="navigate">
            <swiper
              autoplay="true"
              circular="true"
              vertical="true"
            >
              <swiper-item
                wx:for="{{ searchData }}"
                catch:touchmove="stopTouchMove"
                wx:key="id"
              >
                {{ item.value }}
              </swiper-item>
            </swiper>
          </navigator>
        </view>
      </view>
    </view>
  </view>
  <view class="swiper">
    <swiper
      autoplay="true"
      circular="true"
      indicator-dots="true"
      indicator-color="rgba(255, 255, 255, .3)"
      indicator-active-color="rgba(255, 255, 255, 1)"
    >
      <swiper-item wx:for="{{ swiperList }}" wx:key="id">
        <navigator url="{{ item.jumpPath }}" open-type="navigate">
          <image src="{{ item.imgUrl }}" mode="aspectFill"/>
        </navigator>
      </swiper-item>
    </swiper>
    <view class="mask"></view>
  </view>
  <view class="goods">
    <view class="container">
      <view class="goods-item" wx:for="{{goodsList}}" wx:key="id">
        <navigator url="/pages/detail/detail" open-type="navigate">
          <image src="{{ item.imgUrl }}"
          mode="aspectFill"/>
          <view class="goods-content">
            <view class="goods-title"><text>{{ item.title }}</text></view>
            <view class="goods-price">￥<text>{{ item.price }}</text></view>
          </view>
        </navigator>
      </view>
    </view>
    <view class="goods-end"><text>已到底部</text></view>
  </view>
</view>